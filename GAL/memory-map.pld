/* *************** INPUT PINS *********************/
PIN [1..11,13]  = [A0..A11];
/* *************** OUTPUT PINS *********************/
PIN   14     = COPRO;
PIN   15     = RAM;
PIN   16     = BANKED;
PIN   17     = IO;
PIN   18     = ROM;

FIELD Address = [A11..0];

copro  = Address:[000..007];
ram    = Address:[008..7FF];
banked = Address:[800..BFF];
io     = Address:[C00];
rom    = Address:[C10..FFF];


COPRO = !copro;
RAM = !ram # copro;
BANKED = !banked;
IO = !io;
ROM = !rom;
